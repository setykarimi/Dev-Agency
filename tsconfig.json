{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  
  "paths": {
    "@/*": ["./src"],
    "Components/*": [
      "./src/components/*"
    ],
    "Pages/*": [
      "./src/pages/*"
    ],
    "Layout/*": [
      "./src/layout/*"
    ],
    "Images/*": [
      "./src/assets/images/*"
    ],
    "Data/*": [
      "./src/assets/data/*"
    ],
  }
}